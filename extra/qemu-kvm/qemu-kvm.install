post_install() {
  groupadd kvm -f -g 78
  echo ">>> PLEASE READ FOR KVM USAGE!"
  echo ">>>  Load the correct KVM module, you will need a KVM capable CPU!"
  echo ">>>  Add yourself to the group 'kvm'."
  echo ">>>  Use 'qemu-kvm -enable-kvm' to use KVM."
  echo ""
}

post_upgrade() {
  post_install $1
}

post_remove() {
  groupdel kvm
}
