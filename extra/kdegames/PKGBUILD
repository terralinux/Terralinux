	make DESTDIR=$pkgdir install
	cd $srcdir/build/doc/kbattleship
	make DESTDIR=$pkgdir install
	install -D -m644 $srcdir/${pkgbase}-${pkgver}/kbattleship/src/module.dsc \
		$pkgdir/usr/share/ggz/kbattleship.dsc
}

